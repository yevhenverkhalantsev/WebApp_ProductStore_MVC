<div class="row">
    <div class="col-md-4">
        
    </div>
    
    <div class="col-md-4">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Basic Form</h6>
            
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="producer-name">
            </div>
            
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" id="producer-description">
            </div>
        
            <div class="mb-3">
                <label class="form-label">Address</label>
                <input type="text" class="form-control" id="producer-address">
            </div>  
            
            <button id="btnCreate" type="button" class="btn btn-primary">Create</button>
            
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $("#btnCreate").on('click', ()=>{
            let data = {
                Name: $("#producer-name").val(),
                Description: $("#producer-description").val(),
                address: $("#producer-address").val()
            }
            
            let jsonData = JSON.stringify(data)
            $.ajax({
            url:'@Url.Action("Create", "Producer")', 
            method: 'post',
            data: jsonData,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success:(response)=>{},
            error:(response)=>{}
            })
        })
    </script>

}
